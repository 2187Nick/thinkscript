else GEX(currentweek, strike_base, dateString, Vol, t, S, yday, Sqr_Vol_2, Vol_Sqrt_t, Vol_Sqrt_t_S,dow, month).strikeGEX;

#addlabel(yes, "strike_base_gamma : " + GEX(currentweek, strike_base, dateString, Vol, t, S, day, Sqr_Vol_2, Vol_Sqrt_t, Vol_Sqrt_t_S).gamma);
#addlabel(yes, "strike_base_gex : " + strike_base_gex);
def strike_plus1_gex = if AfterRTHStart then GEX(currentweek, strike_plus1, dateString, Vol, t, S, day, Sqr_Vol_2, Vol_Sqrt_t, Vol_Sqrt_t_S,dow, month).strikeGEX
