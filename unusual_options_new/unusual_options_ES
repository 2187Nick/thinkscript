Script UOA {
    input currentweek = 0;
    input strike = 0;
    input dow = 0;
    input month = 0;
    input isput = 0;

    plot trade = (volume("./E"+ (if dow == 5 then "W"+ currentweek else if dow == 4 then currentweek + "D" else if dow == 3 then currentweek + "C"  else if dow == 2 then currentweek + "B" else if dow == 1 then currentweek + "A" else "") + (if month == 1 then "F" else if month == 2 then "G" else if month == 3 then "H" else if month == 4 then "J" else if month == 5 then "K" else if month == 6 then "M" else if month == 7 then "N" else if month == 8 then "Q" else if month == 9 then "U" else if month == 10 then "V" else if month == 11 then "X" else "Z") + "24" + (if isput == 1 then "P" else "C") + AsPrice(strike)+":XCME"))*(ohlc4("./E"+ (if dow == 5 then "W"+ currentweek else if dow == 4 then currentweek + "D" else if dow == 3 then currentweek + "C"  else if dow == 2 then currentweek + "B" else if dow == 1 then currentweek + "A" else "") + (if month == 1 then "F" else if month == 2 then "G" else if month == 3 then "H" else if month == 4 then "J" else if month == 5 then "K" else if month == 6 then "M" else if month == 7 then "N" else if month == 8 then "Q" else if month == 9 then "U" else if month == 10 then "V" else if month == 11 then "X" else "Z") + "24" + (if isput == 1 then "P" else "C") + AsPrice(strike)+":XCME"))/2;


}

