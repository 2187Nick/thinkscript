### Should automatically capture 0dte contract except for EOM day.

declare once_per_bar;
input strikeSpacing = 5;
input tradesize = 100000;
input strikes = 10;
def roundup = no;

def yyyymmdd = getYYYYMMDD();
def month = getMonth();
def yearandmonth = Round(yyyymmdd/ 100,0);
def currentDayofMonth = getDayOfMonth(yyyymmdd);
def dow = getDayOfWeek(yyyymmdd);
def monthfirstDayofWeek = GetDayOfWeek(yearandmonth*100+1);
def totalDaysElapsed = currentDayofMonth - 1 + ((dow - monthfirstDayofWeek + 6) % 7);
def currentWeek = floor((totalDaysElapsed / 7) + 1);

addlabel(yes, ("/E"+ (if dow == 5 then "W" + currentweek else if dow == 4 then currentweek + "D" else if dow == 3 then currentweek + "C"  else if dow == 2 then currentweek + "B" else if dow == 1 then currentweek + "A" else "") + (if month == 1 then "F" else if month == 2 then "G" else if month == 3 then "H" else if month == 4 then "J" else if month == 5 then "K" else if month == 6 then "M" else if month == 7 then "N" else if month == 8 then "Q" else if month == 9 then "U" else if month == 10 then "V" else if month == 11 then "X" else "Z"))+"24C", color.Green);
addlabel(yes, ("/E"+ (if dow == 5 then "W" + currentweek else if dow == 4 then currentweek + "D" else if dow == 3 then currentweek + "C"  else if dow == 2 then currentweek + "B" else if dow == 1 then currentweek + "A" else "") + (if month == 1 then "F" else if month == 2 then "G" else if month == 3 then "H" else if month == 4 then "J" else if month == 5 then "K" else if month == 6 then "M" else if month == 7 then "N" else if month == 8 then "Q" else if month == 9 then "U" else if month == 10 then "V" else if month == 11 then "X" else "Z"))+"24P", color.Red);
